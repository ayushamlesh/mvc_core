@model Category


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/>
        </div>

        <div class="mb-3">
            @*using asp helper tags to use property from model 'asp-for="CatName" '*@
            <label >Category Id</label>
            <input asp-for="CatId" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Category Name</label>
            <input asp-for="CatName" class="form-control" />
        </div>
        <div class="mb-3">
            <lable>Quantity</lable>
            <input asp-for="Quantity" class="form-control" />
        </div>
        <div class="mb-3">
            @*using asp helper tags to use property from model 'asp-for="CatName" '*@
            <label>Price</label>
            <input asp-for="Price" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">
            Back To List
            </a>
    </div>

</form>
