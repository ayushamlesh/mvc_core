@*it will let the view know what is receiverd is the type of IEnmurable.*@
@model IEnumerable<Paharamacyapi.Models.Drugs>

@{
    ViewData["Title"] = "Index";
}

@*we are capturing the data passed from controller*@
<div class="container p-3"> 
    @*parts are devided into 12 sections*@
    <div class="row pt-4"> 
        @*compining 6 in this and another 6 below*@
        <div class="col-6"> 
            <h2>Drug List</h2>
        </div>
        <div class="col-6 text-end" >
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-file-earmark-plus"></i>   Create New Category
            </a>
        </div>
    </div>

    @*//serachbar*@
    <form asp-action="Search" asp-controller="Category" method="post" asp-route-id="id">
    <div class="mb-3">


            <input type="text" id="id" name="id">
            <div class="input-group-append">
                <button type="submit">search</button>
            </div>
    </form>

<table class="table table-bordered table-striped" style="width:100%">
     <thread>
         <tr>
            <th>BatchId</th>
            <th>Medecine Name</th>
            <th>Quantity</th>
            <th>Price</th>
          
     </thread>
     
     <tbody>
    @foreach(var items in Model)
        {
            <tr>
                <td width="20%">@items.Id</td>
                <td width="30%">@items.DrugName</td>
                <td width="20%">@items.Quantity</td>
                <td width="30%">@items.Price</td>
                <td>
                  @*  adding button for edit and delete*@
                    <div class="m-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@items.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>                
                            <a asp-controller="Category" asp-action="Delete"  asp-route-id="@items.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i>Delete
                        </a>
                    </div>
                </td>

            </tr>

        }
    </tbody>
</table>

</div>
